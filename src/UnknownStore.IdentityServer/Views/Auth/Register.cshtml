@model UnknownStore.Common.IdentityModels.RegisterViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <div id="register-form-container">
        <form asp-route="Register" method="post">
            <input type="hidden" asp-for="ReturnUrl">
            <div class="validation" asp-validation-summary="None"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input type="text" class="form-control" placeholder="Email" asp-for="Email">
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input type="text" placeholder="Username" asp-for="Username">
                <span asp-validation-for="Username"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input type="text" placeholder="PhoneNumber" asp-for="PhoneNumber">
                <span asp-validation-for="PhoneNumber"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input type="password" placeholder="Password" asp-for="Password">
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input type="password" placeholder="ConfirmPassword" asp-for="ConfirmPassword">
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <button type="submit" class="btn btn-primary" name="button" value="register">Register</button>
        </form>
    </div>
</div>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}